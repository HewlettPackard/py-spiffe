[flake8]
ignore =
    # E203 - Whitespace before ':'
    E203,
    # E266 - Too many leading '#' for block comment
    E266,
    # E501 - Line too long
    E501,
    # W503 - Line break before binary operator
    W503
    # E402 - Mdule level import not at top of file
    E402
statistics = True
doctests = True
exclude = src/pyspiffe/proto
